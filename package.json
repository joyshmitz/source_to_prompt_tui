{
  "name": "source2prompt-tui",
  "version": "0.3.2",
  "description": "World-class TUI for combining source code files into LLM-ready prompts (Bun + TypeScript + Ink).",
  "license": "MIT",
  "type": "module",
  "bin": {
    "s2p": "./dist/s2p"
  },
  "scripts": {
    "postinstall": "bun scripts/patch-modules.js",
    "dev": "bun run src/index.tsx",
    "build": "tsc",
    "build:bin": "bun build src/index.tsx --compile --minify --outfile dist/s2p",
    "build:mac-arm64": "bun build src/index.tsx --compile --target=bun-darwin-arm64 --minify --outfile dist/s2p-macos-arm64",
    "build:mac-x64": "bun build src/index.tsx --compile --target=bun-darwin-x64 --minify --outfile dist/s2p-macos-x64",
    "build:linux-x64": "bun build src/index.tsx --compile --target=bun-linux-x64 --minify --outfile dist/s2p-linux-x64",
    "build:linux-arm64": "bun build src/index.tsx --compile --target=bun-linux-arm64 --minify --outfile dist/s2p-linux-arm64",
    "build:all": "bun run build:mac-arm64 && bun run build:mac-x64 && bun run build:linux-x64 && bun run build:linux-arm64",
    "typecheck": "tsc --noEmit",
    "check": "bun run typecheck"
  },
  "dependencies": {
    "clipboardy": "^4.0.0",
    "csso": "^5.0.5",
    "html-minifier-terser": "^7.2.0",
    "ignore": "^5.3.0",
    "ink": "^5.0.1",
    "ink-gradient": "^3.0.0",
    "ink-spinner": "^5.0.0",
    "ink-syntax-highlight": "^2.0.0",
    "ink-text-input": "^6.0.0",
    "js-tiktoken": "^1.0.14",
    "react": "^18.3.0",
    "terser": "^5.31.0"
  },
  "devDependencies": {
    "@types/node": "^22.9.0",
    "@types/react": "^18.3.8",
    "react-devtools-core": "^7.0.1",
    "typescript": "^5.6.3"
  }
}
